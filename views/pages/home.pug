extends ../partial/layout

block variables
  - var template = 'home'

block content
  .home(data-background="#f4f4f4" data-color="#000000")
    .home__wrapper
      each section in home.data.body
        if section.slice_type == 'content'
          section.home__content(class=`${section.primary.type === 'Left' ? 'home__content--left' : section.primary.type === 'Right' ? 'home__content--right' : 'home__content--background'}`)
            .home__content__wrapper
              if section.primary.text =='Scroll Down'
                .embed__responsive__item
                  video.embed__responsive__video(autoplay muted loop)
                    source(src="/video" type="video/mp4")
              h2.home__content__title(data-animation="title")
                span!=section.primary.title.replace(/\n/g, '</span><span>')
              .home__content__box
                if section.primary.label
                  p.home__content__label(data-animation="label")=section.primary.label
                .home__content__inner__box
                  if section.primary.description
                  .home__content__description(data-animation="paragraph")
                    span!=section.primary.description.replace(/\n/g, '</span><span>')
                  if section.primary.text
                    if section.primary.link.slug
                      a.home__content__button(data-animation="highlight" href=section.primary.link.slug)=section.primary.text
                    else
                      a.home__content__button(data-animation="highlight" href="javascript:void(0)")=section.primary.text
            figure.home__content__media
              img.home__content__media__image(data-animation="highlight" alt=section.primary.image.alt data-src=section.primary.image.url)
        if section.slice_type == 'gallery'
          if section.primary.title == 'Gala Digdaya &bull; Gala Digdaya &bull; Gala Digdaya &bull; Gala Digdaya'
            section.home__gallery
              h2.home__gallery__title(data-animation="highlight")!=section.primary.title.replace(/\n/g, '<br>')
              .home__gallery__wrapper
                each media in section.items
                  figure.home__gallery__media
                    img.home__gallery__media__image(alt=media.image.alt data-src=media.image.url)
          else
            section.home__gallery--2
              h2.home__gallery__title--2(data-animation="title")!=section.primary.title.replace(/\n/g, '<br>')
              .home__gallery__wrapper--2
                each media in section.items
                  figure.home__gallery__media--2
                    img.home__gallery__media__image--2(data-animation="highlight" alt=media.image.alt data-src=media.image.url)
        if section.slice_type == 'result'
          section.home__result
            .home__result__wrapper
              each text in section.items
                .home__result__box
                  h2.home__result__title!=text.title
                  p.home__result__label!=text.label
              each text in section.items
                .home__result__box
                  h2.home__result__title!=text.title
                  p.home__result__label!=text.label
              each text in section.items
                .home__result__box
                  h2.home__result__title!=text.title
                  p.home__result__label!=text.label
              each text in section.items
                .home__result__box
                  h2.home__result__title!=text.title
                  p.home__result__label!=text.label
      include ../partial/footer
